<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#000000">


    <TextView
        android:id="@+id/tvDragonIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Draconic Observatory \nof the Forgotten Realm"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/imDragons"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:textSize="24sp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/imDragons"
        android:layout_width="450dp"
        android:layout_height="450dp"
        android:scaleType="fitXY"
        android:src = "@drawable/dragonpics"
        app:layout_constraintTop_toBottomOf="@id/tvDragonIntro"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tvFlavorTextOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dragon_entry_txt"
        android:textColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/imDragons"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Enter"
        android:onClick="DragonMainSite"
        />


</androidx.constraintlayout.widget.ConstraintLayout>